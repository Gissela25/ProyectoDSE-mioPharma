@using mioPharma.Data.Enums
@model Cliente
@{
    ViewData["Title"] = "Modificando Estado";
}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <h4>
              @Html.ViewBag.State  Cuenta de Usuario</h4>
        <div class="row">
        <form asp-action="EditState">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row my-3">
            <div class="col-md-6 offset-md-2 align-content-center">
                @if (@Html.ViewBag.State == "Desactivar")
                {
                     <h4 class="text-danger">¿Deseas @Html.ViewBag.State a @Model.Nombre @Model.Apellido?</h4>
                     <input hidden value="2" asp-for="EstadoC" />
                }
                else if(@Html.ViewBag.State == "Activar")
                {
                    <input hidden value="1" asp-for="EstadoC" />
                     <h4 class="text-success">¿Deseas @Html.ViewBag.State a @Model.Nombre @Model.Apellido?</h4>        
                }
                    <input hidden asp-for="Clave" />
                <div class="form-group">
                     <label asp-for="Nombre" class="form-label"></label>
                            <div class="input-group mb-3">
                                <span class="text-white input-group-text" style="background-color: #2D3589;" id="basic-addon1"><i class="bi bi-person-lines-fill"></i></span>
                     <input asp-for="Nombre" readonly class="form-control"/>
                     </div>
                     <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                     <label asp-for="Apellido" class="form-label"></label>
                            <div class="input-group mb-3">
                                <span class="text-white input-group-text" style="background-color: #2D3589;" id="basic-addon1"><i class="bi bi-person-lines-fill"></i></span>
                     <input asp-for="Apellido" readonly class="form-control"/>
                     </div>
                     <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
                <div class="form-group">
                     <label asp-for="Correo" class="form-label"></label>
                            <div class="input-group mb-3">
                                <span class="text-white input-group-text" style="background-color: #2D3589;" id="basic-addon1"><i class="bi bi-envelope"></i></span>
                     <input asp-for="Correo" readonly class="form-control"/>
                     </div>
                     <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
                <div class="form-group">
                     <label asp-for="Telefono" class="form-label"></label>
                            <div class="input-group mb-3">
                                <span class="text-white input-group-text" style="background-color: #2D3589;" id="basic-addon1"><i class="bi bi-telephone"></i></span>
                     <input asp-for="Telefono" readonly class="form-control"/>
                     </div>
                     <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                 <div class="form-group">
                     <label asp-for="Direccion" class="form-label"></label>
                            <div class="input-group mb-3">
                                <span class="text-white input-group-text" style="background-color: #2D3589;" id="basic-addon1"><i class="bi bi-compass"></i></span>
                     <textarea readonly asp-for="Direccion" rows="2" class="form-control noresize"></textarea>
                     <span asp-validation-for="Direccion" class="text-danger"></span>
                 </div>
            </div>
            </div>
                    <div class="form-group vstack gap-2 col-md-5 mx-auto mt-4">
                        <input type="submit" value="Actualizar" class="btn btn-outline-primary" />
                <a class="btn" style="background-color:#2D3589; color:white;" asp-action="Index" asp-controller="Clientes">Regresar</a>
            </div>
                
            </form>
            </div>
        </div>
    </div>