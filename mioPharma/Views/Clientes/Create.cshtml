@using mioPharma.Data.Enums
@model Cliente
@{
    ViewData["Title"] = "Registro";
}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <h4>Regístrate</h4>
        <div class="row">
        <form asp-action="Create">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                     <label asp-for="Nombre" class="form-label"></label>
                            <div class="input-group mb-3">
                                <span class="text-white input-group-text" style="background-color: #2D3589;" id="basic-addon1"><i class="bi bi-person-lines-fill"></i></span>
                     <input placeholder="Ingresa tu Nombre" asp-for="Nombre" class="form-control"/>
                     </div>
                     <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                     <label  asp-for="Apellido" class="form-label"></label>
                            <div class="input-group mb-3">
                                <span class="text-white input-group-text" style="background-color: #2D3589;" id="basic-addon1"><i class="bi bi-person-lines-fill"></i></i></span>
                     <input placeholder="Ingresa tu Apellido" asp-for="Apellido" class="form-control"/>
                     </div>
                     <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
                <div class="form-group">
                     <label asp-for="Correo" class="form-label"></label>
                            <div class="input-group mb-3">
                                <span class="text-white input-group-text" style="background-color: #2D3589;" id="basic-addon1"><i class="bi bi-envelope"></i></span>
                     <input placeholder="example@gmail.com" asp-for="Correo" class="form-control"/>
                     </div>
                     <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                     <label asp-for="Clave" class="form-label"></label>
                            <div class="input-group mb-3">
                                <span class="text-white input-group-text" style="background-color: #2D3589;" id="basic-addon1"><i class="bi bi-key"></i></span>
                     <input type="password" placeholder="Ingresa tu contraseña" asp-for="Clave" class="form-control"/>
                     </div>
                     <span asp-validation-for="Clave" class="text-danger"></span>
                </div>
                <div class="form-group">
                     <label asp-for="Telefono" class="form-label"></label>
                            <div class="input-group mb-3">
                                <span class="text-white input-group-text" style="background-color: #2D3589;" id="basic-addon1"><i class="bi bi-telephone"></i></span>
                     <input placeholder="Example: 7001-0002/ 70010002" asp-for="Telefono" class="form-control"/>
                     </div>
                     <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <select asp-for="EstadoC" hidden class="form-control" asp-items="Html.GetEnumSelectList<EstadoU>()"></select>
                    <span asp-validation-for="EstadoC" class="text-danger"></span>
                </div>
                <div class="form-group">
                     <label asp-for="Direccion" class="form-label"></label>
                            <div class="input-group mb-3">
                                <span class="text-white input-group-text" style="background-color: #2D3589;" id="basic-addon1"><i class="bi bi-compass"></i></span>
                     <textarea placeholder="Ingresa tu dirección" asp-for="Direccion" rows="2" class="form-control noresize"></textarea>
                     <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">

            </div>
            </div>
                    <div class="form-group vstack gap-2 col-md-5 mx-auto mt-4">
                        <input type="submit" value="Create" class="btn btn-outline-primary float-right" />
                <a class="btn" style="background-color:#2D3589; color:white" asp-action="Index" asp-controller="Clientes">Regresar</a>
            </div>
            </form>
            </div>
        </div>
    </div>