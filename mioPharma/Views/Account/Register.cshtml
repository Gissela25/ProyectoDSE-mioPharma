@using mioPharma.Data.ViewModels
@model RegisterVM;

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h4>Crea tu cuenta</h4>
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"] </span>
            </div>
        }

        <div class="row">
        <form asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                     <label asp-for="Nombre" class="form-label"></label>
                            <div class="input-group mb-3">
                                <span class="text-white input-group-text" style="background-color: #2D3589;" id="basic-addon1"><i class="bi bi-person-lines-fill"></i></span>
                     <input placeholder="Ingresa tu Nombre" asp-for="Nombre" class="form-control"/>
                     </div>
                     <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                     <label  asp-for="Apellido" class="form-label"></label>
                            <div class="input-group mb-3">
                                <span class="text-white input-group-text" style="background-color: #2D3589;" id="basic-addon1"><i class="bi bi-person-lines-fill"></i></i></span>
                     <input placeholder="Ingresa tu Apellido" asp-for="Apellido" class="form-control"/>
                     </div>
                     <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
                <div class="form-group">
                     <label asp-for="EmailAddress" class="form-label"></label>
                            <div class="input-group mb-3">
                                <span class="text-white input-group-text" style="background-color: #2D3589;" id="basic-addon1"><i class="bi bi-envelope"></i></span>
                     <input placeholder="example@gmail.com" asp-for="EmailAddress" class="form-control"/>
                     </div>
                     <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                     <label asp-for="Password" class="form-label"></label>
                            <div class="input-group mb-3">
                                <span class="text-white input-group-text" style="background-color: #2D3589;" id="basic-addon1"><i class="bi bi-key"></i></span>
                     <input type="password" placeholder="Ingresa tu contraseña" asp-for="Password" class="form-control"/>
                     </div>
                     <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <div class="input-group mb-3">
                                <span class="text-white input-group-text" style="background-color: #2D3589;" id="basic-addon1"><i class="bi bi-key"></i></span>
                                <input type="password" placeholder="Ingresa tu contraseña" asp-for="ConfirmPassword" class="form-control" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                <div class="form-group">
                     <label asp-for="PhoneNumber" class="form-label"></label>
                            <div class="input-group mb-3">
                                <span class="text-white input-group-text" style="background-color: #2D3589;" id="basic-addon1"><i class="bi bi-telephone"></i></span>
                     <input placeholder="Example: 7001-0002/ 70010002" asp-for="PhoneNumber" class="form-control"/>
                     </div>
                     <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
               
            </div>
                        <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Address" class="form-label"></label>
                            <div class="input-group mb-3">
                                <span class="text-white input-group-text" style="background-color: #2D3589;" id="basic-addon1"><i class="bi bi-compass"></i></span>
                                <textarea placeholder="Ingresa tu dirección" asp-for="Address" rows="2" class="form-control noresize"></textarea>
                            </div>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        </div>
            <div class="col-md-12">
                 <div class="form-group vstack gap-2 col-md-5 mx-auto mt-4">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                <a class="btn" style="background-color:#2D3589; color:white" asp-action="Index" asp-controller="Medicamentos">Regresar</a>
            </div>
            </div>

                   
            </form>
            </div>
        </div>
    </div>