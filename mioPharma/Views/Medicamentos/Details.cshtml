@model Medicamento

@{
    ViewData["Title"] = "Detalles del Medicamento";
}
<div class="container text-center">
    <div class="row">
        <div class="col-md-4  offset-md-4 text-center">
            <h1>@Model.Nombre</h1>
        </div>
        <hr class="my-2" />
        <div class="col">
            <div class="mt-5">
                <div class="pt-5">
                      <img src="@Model.Img_Medicamento" width="300" height="370">
                </div>
            </div>
        </div>
        <div class="col-8 col-sm-6">
            <div class="card text-center">
                <div class="card-header text-white" style="background-color:#2D3589">
                    Detalles de @Model.Nombre
                </div>

                <div class="card-body">
                    <h5 class="card-title">Descripción</h5>
                    <p class="card-text">@Model.Descripcion</p>
                    <p><b>Existencias</b></p>
                    <p class="text">@Model.Existencias</p>
                    <p><b>Disponibilidad</b></p>
                    @if (Model.Existencias > 0)
                    {
                        <p class="text-success"><i class="bi bi-emoji-smile"></i> En Stock</p>
                    }
                    else
                    {
                        <p class="text-danger"><i class="bi bi-emoji-frown"></i> Agotado</p>
                    }
                    <p><b>Presentación</b></p>
                    <p class="text">@Model.Presentacion</p>
                    <p><b>Composición</b></p>
                    <div class="col-md-12">
                        <img src="@Model.Img_Composicion" width="150" height="200">
                    </div>
                </div>
                <div class="card-footer text-white">
                    <a class="btn text-white @((Model.Existencias <= 0)? "disabled" : "")"  style="background-color: #45B449;" asp-route-id="@Model.Id" asp-controller="Ordenes" asp-action="AddItemToCarritoOfCompras"><i class="bi bi-cart-plus"></i> <p class="text">Agregar Carrito ($@Model.Precio)</p></a>
                   
                </div>
            </div>
        </div>
    </div>
</div>