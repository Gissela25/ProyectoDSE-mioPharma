@using mioPharma.Data.Enums
@model Usuario
@{
    ViewData["Title"] = "Modificando Estado";
}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <h4>
              @Html.ViewBag.State  Cuenta de Usuario</h4>
        <div class="row">
        <form asp-action="EditState">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row my-3">
            <div class="col-md-6 offset-md-2 align-content-center">
                @if (@Html.ViewBag.State == "Desactivar")
                {
                     <h4 class="text-danger">¿Deseas @Html.ViewBag.State a @Model.Nombre @Model.Apellido?</h4>
                     <input hidden value="2" asp-for="EstadoU" />
                }
                else if(@Html.ViewBag.State == "Activar")
                {
                    <input hidden value="1" asp-for="EstadoU" />
                     <h4 class="text-success">¿Deseas @Html.ViewBag.State a @Model.Nombre @Model.Apellido?</h4>        
                }
                    <input hidden asp-for="Clave" />
                <div class="form-group">
                     <label asp-for="Nombre" class="form-label"></label>
                     <input asp-for="Nombre" readonly class="form-control"/>
                     <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                     <label asp-for="Apellido" class="form-label"></label>
                     <input asp-for="Apellido" readonly class="form-control"/>
                     <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
                <div class="form-group">
                     <label asp-for="Correo" class="form-label"></label>
                     <input asp-for="Correo" readonly class="form-control"/>
                     <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="TipoU" class="form-label"></label>
                    <select hidden asp-for="TipoU" class="form-control"  asp-items="Html.GetEnumSelectList<EstadoU>()"></select>
                    <span asp-validation-for="TipoU" class="text-danger"></span>
                </div>
            </div>
            </div>
            <div class="form-group my-2 py-3 justify-content-center">
                <input type="submit" value="Actualizar" class="btn btn-outline-success"/>
                <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="Usuarios">Regresar</a>
            </div>
            </form>
            </div>
        </div>
    </div>